<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ExpensesTheme" parent="Theme.AppCompat.Light.DarkActionBar">        
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/darkGreen</item>
        <item name="colorAccent">@color/lightGreen</item>
        
        <item name="selectableItemBackground">@drawable/statelist_normal</item>
        <item name="selectableItemBackgroundBorderless">@drawable/statelist_normal</item>
        <item name="listChoiceBackgroundIndicator">@drawable/statelist_normal</item>
        <item name="android:listSelector">@drawable/statelist_normal</item>
        <item name="android:itemBackground">@drawable/statelist_normal</item>              
        
        <!-- Action Bar -->
        <item name="actionBarStyle">@style/MN.ActionBar</item>
        <item name="actionBarItemBackground">@drawable/statelist_normal</item>
        <item name="actionButtonStyle">@style/MN.ActionButton</item>            
        
        <!-- Action Mode -->
		<item name="actionModeBackground">@drawable/actionmode_bg</item>
		<!-- <item name="actionModeCloseButtonStyle">@style/MN.Widget.ActionButton.CloseMode</item>-->
		
		<!-- Other -->
		<item name="android:windowBackground">@android:color/white</item>
    </style>
    
    <style name="MN.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:background">@drawable/statelist_normal</item>
    </style>
    
    <style name="MN.TextAppearance.Subtitle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="MN.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/actionbar_bg</item>
        <item name="titleTextStyle">@style/MN.ActionBar.Title</item>
    </style>
        
    <style name="MN.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/yellow</item>
    </style>
    
    <style name="MN.Widget.ImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/statelist_normal</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="MN.Widget.DialogButton" parent="@android:style/Widget.Button">
    </style>
    
    <style name="MN.Widget.ActionButton.CloseMode" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/statelist_normal</item>
    </style>
    
    <style name="MN.MenuTextView" parent="@android:style/Widget.TextView">
        <item name="android:padding">7dp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:background">@drawable/statelist_normal</item>
		<item name="android:clickable">true</item>
		<item name="android:textAppearance">@style/TextAppearance.AppCompat.Menu</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:onClick">menuClick</item>
		<item name="android:drawablePadding">8dp</item>
    </style>

    <style name="MN.MenuSubtitle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="MN.HBar" parent="@android:style/Widget">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/hBar</item>
    </style>

    <style name="MN.HBarMenu" parent="@style/MN.HBar">
        <item name="android:background">@color/hBarMenu</item>
    </style>
    
    <style name="MN.HBarThin" parent="@android:style/Widget">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/hBar</item>
    </style>
    
	<color name="green">#119400</color>
    <color name="lightGreen">#4cc457</color>
    <color name="darkGreen">#0a5b00</color>
    <color name="yellow">#fbffd7</color>
	<color name="gray">#d4d4d4</color>
	<color name="red">#d7412b</color>
	
	<color name="hBar">@android:color/darker_gray</color>
    <color name="hBarMenu">@color/darkGreen</color>
</resources>